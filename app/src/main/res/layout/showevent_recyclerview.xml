<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/moroGreenBackground"
    android:padding="5dp">

    <ImageView
        android:id="@+id/showevent_imageView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/bn_find_event"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/colorBox_TextView"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@+id/showevent_imageView"
        android:layout_marginTop="3dp"
        android:background="#4CAF50"
        android:gravity="center" />

    <TextView
        android:id="@+id/afstand_textView"
        android:layout_width="103dp"
        android:layout_height="32dp"
        android:layout_below="@+id/showevent_imageView"
        android:layout_marginTop="2dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/dato_textView"
        android:layout_width="119dp"
        android:layout_height="31dp"
        android:layout_below="@+id/showevent_imageView"
        android:layout_marginStart="48dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="19dp"
        android:layout_toStartOf="@+id/tidspunkt_textView"
        android:layout_toEndOf="@+id/afstand_textView"
        android:gravity="center" />

    <TextView
        android:id="@+id/tidspunkt_textView"
        android:layout_width="103dp"
        android:layout_height="32dp"
        android:layout_below="@+id/showevent_imageView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="9dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/titel_textView"
        android:layout_width="405dp"
        android:layout_height="46dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="1dp"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowRadius="1"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />


</RelativeLayout>

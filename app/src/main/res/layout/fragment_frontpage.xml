<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_frontpage"
    android:background="@color/moroPinkBackground"
    tools:context=".home.FrontpageFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <FrameLayout
            android:id="@+id/featuredEventFrontpageFL"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"

            />

        <Button
            android:id="@+id/rightNowButtonFP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/lige_nu" />

        <Button
            android:id="@+id/findEventButtonFP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/find_event" />
    </LinearLayout>

</FrameLayout>
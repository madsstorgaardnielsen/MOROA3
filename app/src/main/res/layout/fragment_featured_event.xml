<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.FeaturedEventFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/featuredEventImageView"
            android:layout_width="match_parent"
            android:layout_height="341dp"
            android:src="@android:drawable/btn_star_big_on"

            />

        <TextView
            android:id="@+id/featuredEventTitleTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="35dp"
            tools:text="POTTER MED PATTER"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/featuredEventTimeTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textSize="16dp"
                tools:text="13:30" />

            <TextView
                android:id="@+id/featuredEventAddressTV"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="16dp"
                tools:text="Kgs. Nytorv 1" />
        </LinearLayout>




    </LinearLayout>

</FrameLayout>
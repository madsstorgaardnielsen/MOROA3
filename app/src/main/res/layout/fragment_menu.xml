<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_menu"
    android:background="@color/moroPurpleBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MenuFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tip_textView"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="140dp"
            android:gravity="center"
            android:text="@string/tip_os"
            android:textSize="24sp"
            android:onClick="onClick"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
             />

        <TextView
            android:id="@+id/om_textView"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="92dp"
            android:textSize="24sp"
            android:gravity="center"
            android:text="@string/om_os"
            android:onClick="onClick"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tip_textView" />

        <TextView
            android:id="@+id/kontakt_textView"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="@string/kontakt_os"
            android:textSize="24sp"
            android:onClick="onClick"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/om_textView"
            app:layout_constraintVertical_bias="0.291" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>